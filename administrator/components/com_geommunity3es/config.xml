<?xml version="1.0" encoding="utf-8"?>
<config>
	<fieldset name="component"
		label="COM_GEOMMUNITY3ES_COMPONENT_LABEL"
		description="COM_GEOMMUNITY3ES_COMPONENT_DESC"
	>
		<field name="visitor_addressfield" type="text" default="ADDRESS" label="Visitor Address field" description="When loading the map, visitor will be asked to share location with your site (if html5 geolocation is enabled). If this is refused and if the user is loggued in, the map will load centered on the user's location based on the addressfield coordinates. If the visitor is not logued in, default map coordinates will be used as set in the map parameter of this component. Default address field in Easysocial is ADDRESS. This is the unique key value you get in the last tab (Advanced) of the custom field settings in EasySocial Profile types manager." size="10" />
		<field name="unitsystem" type="radio" default="METRIC" label="Unit System" description="Metric or imperial" size="10" class="radio btn-group">
			<option value="METRIC" >METRIC</option>
			<option value="IMPERIAL" >IMPERIAL</option>
		</field>
		
		<field name="profile_itemid" type="text" default="" label="Profile Itemid" description="" size="10" />
		<field name="group_itemid" type="text" default="" label="Groups Itemid" description="" size="10" />
		<field name="photoalbum_itemid" type="text" default="" label="PhotoAlbum Itemid" description="" size="10" />
		<field name="photo_itemid" type="text" default="" label="Photo Itemid" description="" size="10" />
		<field name="video_itemid" type="text" default="" label="Video Itemid" description="" size="10" />
		<field name="event_itemid" type="text" default="" label="Event Itemid" description="" size="10" />
		<field name="easyblog_itemid" type="text" default="" label="Easyblog Itemid" description="" size="10" />

	</fieldset>
	<fieldset name="apikeys"
		description="COM_GEOMMUNITY2_APIKEYS_DESC"
		label="COM_GEOMMUNITY2_APIKEYS_LABEL"
	>
		<field name="js_key" type="text" label="Google maps API KEY" description="" default="" />
		<field name="js_client" type="text" label="Google maps (PRO) Client" description="" default="" />
		<field name="js_signature" type="text" label="Google maps (PRO) Signature" description="" default="" />
		
	</fieldset>
	<fieldset name="permissions"
		description="JCONFIG_PERMISSIONS_DESC"
		label="JCONFIG_PERMISSIONS_LABEL"
	>

		<field 
            name="rules" 
            type="rules"
			component="com_geommunity3es"
            class="inputbox"
			filter="rules"
			validate="rules"
			label="JCONFIG_PERMISSIONS_LABEL"
			section="component" />
	</fieldset>

</config>
